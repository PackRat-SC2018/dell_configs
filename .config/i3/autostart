# autostart file for i3 window manager
#

# kill sxhkd if running
exec killall -q sxhkd &

# Background and wallpaper

exec xsetroot -solid "#384778"

# single monitor
exec "feh --no-fehbg --bg-center --randomize $HOME/wallpaper/*"

