# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        workspace_buttons yes
        tray_output primary
        bindsym --release button3 exec jgmenu --config-file=$HOME/.config/jgmenu/jgmenui3rc
        bindsym --release button2 exec --no-startup-id import -window root -quality 100 ~/Pictures/i3_screen-import-$(date +%F_%s).png
        font pango:Fira Code Regular 10
        # status_command i3status
        status_command slstatus -s
        separator_symbol " "
        colors {
          background            #151718
          statusline            #757575
          focused_workspace     #424153    #424153    #D5D5D5
          inactive_workspace    #2C2D2E    #2C2D2E    #757575
          active_workspace      #373B41    #373B41    #757575
          urgent_workspace      #A51717    #A51717    #FFFFFF
     }
}
